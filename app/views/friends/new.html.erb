<div class="panel panel-default">
    <div class="create-friend-container">

        Create your friend profile
    </div>
    <div class="panel-body">
      <div class="container">

        <div class="row">
            <%= simple_form_for @friend, data: {turbo: false} do |f| %>
              <%= f.input :first_name %>
              <%= f.input :last_name %>
              <%= f.input :age, collection: 18..100 %>
              <%= f.input :price, as: :integer %>
              <%= f.input :phone_number %>
              <%= f.input :email_address %>
              <%= f.input :category, collection: Friend::CATEGORIES %>
              <%= f.input :photo, as: :file %>
              <%= f.input :description, as: :text %>
              <%= f.input :address %>

              <%= f.button :button, class: 'button-rounded-orange' %>
            <% end %>

            <%= link_to "<-Back", friends_path %>
        </div>
    </div>
</div>

<%# SHOW ---> <%= link_to "Delete",
  friends_path(),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
