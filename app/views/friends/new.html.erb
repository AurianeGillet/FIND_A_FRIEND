<div class="panel panel-default">
    <div class="panel-heading">
        Create your friend profile
    </div>
    <div class="panel-body">
      <div class="container">

        <div class="row">
            <%= simple_form_for @friend, data: {turbo: false} do |f| %>
              <%= f.input :first_name %>
              <%= f.input :last_name %>
              <%= f.input :phone_number %>
              <%= f.input :email_address %>
              <%= f.input :category, collection: Friend::CATEGORIES %>
              <%= f.submit class: 'btn btn-primary' %>
            <% end %>
            <%= link_to "<-Back", friends_path %>
        </div>
    </div>
</div>
